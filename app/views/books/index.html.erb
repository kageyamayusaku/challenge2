<body>
  <h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <tr>
    <td>
      <% @books.each do |b| %>
        <span><%= b.title %></span>
        <span><%= b.body %></span>
        <%= link_to "Show" , book_path(b) %>
        <%= link_to "Edit" , edit_book_path(b) %>
        <%= link_to "Destroy" , "/books/#{b.id}", method: :delete %>
      <% end %>
      </td>
    </tr>
  </table>
  
  
  
   <!-- エラー時のメッセージ表示 -->
   
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <div class="error_create">
      <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

    <%= form_with model: @book, url: "/books", method: :post do |f| %>
      <div class="field_error">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field_error">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="field">
        <%= f.submit "Create Book" %>
      </div>
    <% end %>

  <!-- 通常時 -->
  
  <% else %>
    <%= form_with model: @book, url: "/books", method: :post do |f| %>
      <div class="field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="field">
        <%= f.submit "Create Book" %>
      </div>
    <% end %>
  <% end %>
</body>